{
  "name": "qti-generator",
  "version": "1.0.0",
  "description": "Generador de QTI para Canvas LMS",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=development electron . --dev",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "electron",
    "qti",
    "canvas",
    "lms",
    "assessment"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.0",
    "electron": "^36.5.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jsdom": "^23.0.0",
    "svelte": "^5.34.8",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "electron-log": "^5.4.1",
    "katex": "^0.16.0",
    "marked": "^12.0.0",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.3.31",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.qti-generator.app",
    "productName": "QTI Generator",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "files": [
      "main.js",
      "logo.ico",
      "preload.js",
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*"
    ]
  }
}
