{
  "name": "qti-generator",
  "version": "1.0.0",
  "description": "Generador de QTI para Canvas LMS",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=development electron . --dev",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "electron",
    "qti",
    "canvas",
    "lms",
    "assessment"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.0",
    "electron": "^36.5.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jsdom": "^23.0.0",
    "svelte": "^5.34.8",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "@google/generative-ai": "^0.2.0",
    "electron-log": "^5.4.1",
    "jsonrepair": "^3.13.0",
    "katex": "^0.16.0",
    "latex-utensils": "^6.2.0",
    "marked": "^12.0.0",
    "node-fetch": "^2.7.0",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.qti-generator.app",
    "productName": "QTI Generator",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico",
      "installerHeaderIcon": "logo.ico",
      "include": "build/installer.nsh",
      "guid": "a3c5c8e2-1f4d-4b7e-8a9c-2d3e4f5g6h7i"
    },
    "files": [
      "main.js",
      "logo.ico",
      "preload.js",
      "dist/**/*",
      "src/**/*",
      "!src/**/*.test.js",
      "!**/.DS_Store",
      "!**/.git/**",
      "!**/node_modules/.bin/**"
    ],
    "extraFiles": [],
    "compression": "normal"
  }
}
