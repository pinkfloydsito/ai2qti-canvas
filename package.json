{
  "name": "qti-generator",
  "version": "1.0.0",
  "description": "Electron app to generate QTI files for Canvas LMS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["electron", "qti", "canvas", "lms", "assessment"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "spectron": "^19.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^23.0.0"
  },
  "dependencies": {
    "xml2js": "^0.6.2",
    "pdf-parse": "^1.1.1",
    "@google/generative-ai": "^0.2.0",
    "katex": "^0.16.0",
    "marked": "^12.0.0"
  },
  "build": {
    "appId": "com.qti-generator.app",
    "productName": "QTI Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.html",
      "renderer.js",
      "styles.css",
      "node_modules/**/*"
    ]
  }
}
